{
  "community": {
    "apiUrl": "https://your-community.com/api",
    "apiVersion": "v1",
    "endpoints": {
      "posts": "/posts",
      "comments": "/comments",
      "reactions": "/reactions",
      "users": "/users"
    }
  },
  "rateLimits": {
    "global": {
      "postsPerDay": 20,
      "postsPerHour": 3,
      "engagementsPerDay": 50,
      "engagementsPerHour": 8
    },
    "perPersona": {
      "postsPerDay": 5,
      "postsPerHour": 1,
      "minGapMinutes": 120,
      "engagementsPerDay": 15
    },
    "timing": {
      "minDelayBetweenPosts": 30,
      "maxBurstInHour": 2,
      "quietHoursStart": 2,
      "quietHoursEnd": 6
    }
  },
  "contentSources": {
    "rss": [
      {
        "name": "TechCrunch",
        "url": "https://techcrunch.com/feed/",
        "category": "tech-news",
        "weight": 1.0
      },
      {
        "name": "Hacker News Best",
        "url": "https://hnrss.org/best",
        "category": "tech-discussion",
        "weight": 1.2
      },
      {
        "name": "Product Hunt",
        "url": "https://www.producthunt.com/feed",
        "category": "products",
        "weight": 0.8
      }
    ],
    "hackernewsApi": {
      "enabled": true,
      "endpoint": "https://hacker-news.firebaseio.com/v0",
      "topStoriesLimit": 10
    },
    "newsApi": {
      "enabled": false,
      "query": "startup OR tech OR AI",
      "language": "en",
      "sortBy": "relevancy"
    }
  },
  "ai": {
    "model": "claude-sonnet-4-20250514",
    "temperature": 0.85,
    "maxTokens": 1000,
    "topicEnrichment": {
      "model": "claude-sonnet-4-20250514",
      "temperature": 0.7
    },
    "commentGeneration": {
      "model": "claude-sonnet-4-20250514",
      "temperature": 0.9,
      "maxTokens": 300
    }
  },
  "humanization": {
    "aiDetectionThreshold": 10,
    "gradeThresholds": {
      "A": 5,
      "B": 10,
      "REWRITE": 999
    },
    "typoPatterns": [
      { "find": "the", "replace": "teh", "prob": 0.3 },
      { "find": "just", "replace": "jsut", "prob": 0.2 },
      { "find": "with", "replace": "wiht", "prob": 0.2 },
      { "find": "really", "replace": "realy", "prob": 0.4 },
      { "find": "definitely", "replace": "definately", "prob": 0.5 },
      { "find": "because", "replace": "becuase", "prob": 0.3 },
      { "find": "their", "replace": "thier", "prob": 0.25 }
    ],
    "bannedPhrases": [
      "delve",
      "furthermore",
      "moreover",
      "in conclusion",
      "it's important to note",
      "it's worth mentioning",
      "nevertheless",
      "I cannot help but",
      "feel free to",
      "I hope this helps",
      "don't hesitate to",
      "at the end of the day"
    ]
  },
  "contentTypes": {
    "article": {
      "engagementChance": 0.4,
      "avgLength": 350
    },
    "discussion": {
      "engagementChance": 0.6,
      "avgLength": 250
    },
    "question": {
      "engagementChance": 0.9,
      "avgLength": 150
    },
    "hot-take": {
      "engagementChance": 0.85,
      "avgLength": 200
    }
  },
  "scheduling": {
    "timeSlots": {
      "early-morning": { "hours": [6, 7, 8], "variance": 45 },
      "morning": { "hours": [9, 10, 11], "variance": 30 },
      "business-hours": { "hours": [9, 10, 11, 14, 15, 16], "variance": 30 },
      "lunch": { "hours": [12, 13], "variance": 20 },
      "late-night": { "hours": [21, 22, 23, 0], "variance": 40 }
    },
    "timezone": "Asia/Seoul",
    "humanInconsistencyChance": 0.15
  },
  "database": {
    "type": "postgres",
    "tables": {
      "topics": "community_topics",
      "posts": "community_posts",
      "engagements": "community_engagements",
      "seedAccounts": "community_seed_accounts"
    }
  },
  "monitoring": {
    "logLevel": "info",
    "alertOnFailure": true,
    "dailyReportEnabled": true
  }
}
